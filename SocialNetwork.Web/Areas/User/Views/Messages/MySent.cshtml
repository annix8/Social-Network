@model MessagesPaginationModel
@{
    ViewData["Title"] = "Sent messages";
}
<div class="row">
    <div class="col-md-8">
        <h2>Sent</h2><hr />
        @if (Model.Messages.Any())
        {
            Html.RenderPartial("_Messages", Model);
        }
        else
        {
            <div class="alert alert-info">
                You haven't sent any messages yet.
            </div>

        }
    </div>
    <div class="col-md-4">
        <div class="card my-4">
            <h5 class="card-header">Profile</h5>
            <div class="card-body">
                <a asp-area="User" asp-controller="Profile" asp-action="MyProfile">Go to my profile</a>
            </div>
        </div>
    </div>
</div>
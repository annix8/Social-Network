@model PostModel
@{
    ViewData["Title"] = "Edit";
}


<div class="row">
    <div class="col-md-8">
        <h2>Edit post - @Model.Title</h2>

        <form method="post" enctype="multipart/form-data" asp-controller="Posts" asp-action="Edit">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="Title">Title</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content">Content</label>
                <textarea asp-for="Content" class="form-control" rows="15"></textarea>
                <span asp-validation-for="Content"></span>
            </div>
            
            <input type="hidden" asp-for="PostId" />
            <input type="submit" class="btn btn-primary" value="Edit" />
        </form>
    </div>
    <div class="col-md-4">
        <div class="card my-4">
            <h5 class="card-header">Profile</h5>
            <div class="card-body">
                <a asp-area="User" asp-controller="Profile" asp-action="MyProfile">Go to my profile</a>
            </div>
        </div>
    </div>
</div>

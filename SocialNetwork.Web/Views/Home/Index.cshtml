
@{
    ViewData["Title"] = "Home";
}

<div class="container">

    <!-- Jumbotron Header -->
    <header class="jumbotron my-4">
        <h1 class="display-3">Greetings, adventurer!</h1>
        <p class="lead">Welcome to the Social Network. Here you can find new friends, share posts or photos. Have fun!</p>
        <a asp-area="" asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg">Login</a>
        <p style="margin-top:15px;">Don't have an account? <a asp-area="" asp-controller="Account" asp-action="Register">Register here</a></p>
    </header>

    <!-- Page Features -->
    <div class="row text-center">

        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card">
                <img class="card-img-top" src="~/images/home/share.jpg" alt="">
                <div class="card-body">
                    <h4 class="card-title">Posts</h4>
                    <p class="card-text">Share your thoughts with your friends.</p>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card">
                <img class="card-img-top" src="~/images/home/comment.jpg" alt="">
                <div class="card-body">
                    <h4 class="card-title">Comment on posts</h4>
                    <p class="card-text">Attend in open discussions in other posts.</p>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card">
                <img class="card-img-top" src="~/images/home/friends.jpg" alt="">
                <div class="card-body">
                    <h4 class="card-title">Friends</h4>
                    <p class="card-text">Browse through the network of people and find new friends.</p>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card">
                <img class="card-img-top" src="~/images/home/album.jpg" alt="">
                <div class="card-body">
                    <h4 class="card-title">Photo albums</h4>
                    <p class="card-text">Organize your photos into albums and show them to your friends.</p>
                </div>
            </div>
        </div>
                
    </div>
    <!-- /.row -->

</div>